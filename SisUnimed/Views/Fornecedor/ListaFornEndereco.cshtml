@model IEnumerable<SisUnimed.Models.ListaEndereco>

@{       
    IEnumerable<SisUnimed.Models.ListaEndereco> listaendereco = (IEnumerable<SisUnimed.Models.ListaEndereco>)ViewData["listaendereco"];
    var grid = new WebGrid(listaendereco.ToList(), ajaxUpdateCallback: "divGridEndereco", ajaxUpdateContainerId: "divGridEndereco", defaultSort: "c_descricao", rowsPerPage: 5);
}


