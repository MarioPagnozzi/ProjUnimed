@model IEnumerable<SisUnimed.Models.ListaFornecedorBanco>

@{       
    IEnumerable<SisUnimed.Models.ListaFornecedorBanco> listabanco = (IEnumerable<SisUnimed.Models.ListaFornecedorBanco>)ViewData["listafornbanco"];
    var grid = new WebGrid(listabanco.ToList(), ajaxUpdateCallback: "divGridBanco", ajaxUpdateContainerId: "divGridBanco", defaultSort: "c_nome", rowsPerPage: 5);
}


        <fieldset>
            <legend>Bancos</legend>

                @grid.GetHtml(tableStyle: "table",alternatingRowStyle: "alternate", headerStyle: "header", columns: new[] {                    
                    grid.Column(columnName: "id",header:"id",format: a => new HtmlString(Ajax.ActionLink((string)a.id.ToString(),"PreencheCamposBanco",new{id_banco=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadBanco"}).ToString()),canSort: true),
                    grid.Column(columnName: "banco",header:"Banco",format: a => new HtmlString(Ajax.ActionLink((string)a.banco.ToString(),"PreencheCamposBanco",new{id_banco=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadBanco"}).ToString()),canSort: true),
                    grid.Column(columnName: "c_agencia",header:"Agência",format: a => new HtmlString(Ajax.ActionLink((string)a.c_agencia.ToString(),"PreencheCamposBanco",new{id_banco=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadBanco"}).ToString()),canSort: true),
                    grid.Column(columnName: "c_conta",header:"Nº Conta",format: a => new HtmlString(Ajax.ActionLink((string)a.c_conta.ToString(),"PreencheCamposBanco",new{id_banco=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadBanco"}).ToString()),canSort: true),
                    grid.Column(columnName: "c_titular",header:"Titular",format: a => new HtmlString(Ajax.ActionLink((string)a.c_titular.ToString(),"PreencheCamposBanco",new{id_banco=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadBanco"}).ToString()),canSort: true),
