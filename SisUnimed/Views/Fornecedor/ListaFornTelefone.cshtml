@model IEnumerable<SisUnimed.Models.ListaFornecedorTelefone>

@{       
    IEnumerable<SisUnimed.Models.ListaFornecedorTelefone> listatelefone = (IEnumerable<SisUnimed.Models.ListaFornecedorTelefone>)ViewData["listatelefone"];
    var grid = new WebGrid(listatelefone.ToList(), ajaxUpdateCallback: "divGridTelefone", ajaxUpdateContainerId: "divGridTelefone", defaultSort: "c_nome", rowsPerPage: 5);
}


        <fieldset>
            <legend>Telefones</legend>

                @grid.GetHtml(tableStyle: "table",alternatingRowStyle: "alternate", headerStyle: "header", columns: new[] {                    
                    grid.Column(columnName: "id",header:"id",format: a => new HtmlString(Ajax.ActionLink((string)a.id.ToString(),"PreencheCamposTelefone",new{id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                    grid.Column(columnName: "c_nome",header:"Contato",format: a => new HtmlString(Ajax.ActionLink((string)a.c_nome.ToString(),"PreencheCamposTelefone",new{id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                    grid.Column(columnName: "c_setor",header:"Ramal",format: a => new HtmlString(Ajax.ActionLink((string)a.c_setor.ToString(),"PreencheCamposTelefone",new{id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                    grid.Column(columnName: "c_telefone",header:"Telefone",format: a => new HtmlString(Ajax.ActionLink((string)a.c_telefone.ToString(),"PreencheCamposTelefone",new{id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                   
                    grid.Column(columnName: "sisdatai", header: "Data de Inclusão", format: a => new HtmlString(Ajax.ActionLink((string)a.sisdatai.ToString(),"PreencheCamposTelefone", new { id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                    grid.Column(columnName: "sisusuarioi", header: "Usuário Inclusão", format: a => new HtmlString(Ajax.ActionLink((string)a.sisusuarioi.ToString(),"PreencheCamposTelefone", new {id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                    grid.Column(columnName: "sisdataa", header: "Última Alteração", format: a => new HtmlString(Ajax.ActionLink((string)a.sisdataa.ToString(),"PreencheCamposTelefone", new { id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true),
                    grid.Column(columnName: "sisusuarioa", header: "Usuário Alteração", format: a => new HtmlString(Ajax.ActionLink((string)a.sisusuarioa.ToString(),"PreencheCamposTelefone", new {id_tel=a.id,id=a.fornecedor},new AjaxOptions {UpdateTargetId="cadTelefones"}).ToString()),canSort: true)
    
                })

        </fieldset>
